{
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 140,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        }
    ]
}
